# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./xteam_pro.db
# For production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost/xteam_pro

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@xteam.pro
SMTP_FROM_NAME=XTeam.Pro

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@xteam.pro
DEFAULT_ADMIN_PASSWORD=change-this-password

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/xteam_pro.log

# Redis (for caching and sessions)
# REDIS_URL=redis://localhost:6379/0

# Production specific
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem